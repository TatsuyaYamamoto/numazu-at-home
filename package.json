{
  "name": "numazu-at-home",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Tatsuya Yamamoto <yamamoto.tatsuya@fujixerox.co.jp>",
  "license": "MIT",
  "engines": {
    "node": "10"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "dev": "next src/app",
    "serve": "firebase emulators:start --only functions,hosting",
    "build-client": "next build src/app",
    "build-functions": "tsc --project src/functions",
    "build-copy-deps": "run-s build-copy-deps:*",
    "build-copy-deps:cpx": "cpx '*{package.json,yarn.lock}' 'dist/functions'",
    "build-copy-deps:yarn": "yarn install --production --cwd dist/functions",
    "build-dev": "cross-env NODE_ENV=development npm-run-all --print-label clean build-client --parallel build-functions build-copy-deps",
    "build-pro": "cross-env NODE_ENV=production  npm-run-all --print-label clean build-client --parallel build-functions build-copy-deps",
    "deploy-dev": "firebase deploy --project numazu-at-home-dev",
    "deploy-pro": "firebase deploy --project numazu-at-home"
  },
  "dependencies": {
    "express": "*",
    "firebase-admin": "^8.10.0",
    "firebase-functions": "^3.6.0",
    "jsdom": "^16.2.2",
    "next": "^9.3.5",
    "node-fetch": "^2.6.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "devDependencies": {
    "@types/jsdom": "^16.2.1",
    "@types/node": "^13.13.2",
    "@types/node-fetch": "^2.5.7",
    "@types/react": "^16.9.34",
    "@types/react-dom": "^16.9.6",
    "cpx": "^1.5.0",
    "cross-env": "^7.0.2",
    "firebase-functions-test": "^0.2.0",
    "npm-run-all": "^4.1.5",
    "tslint": "^5.12.0",
    "typescript": "^3.8.3"
  }
}
