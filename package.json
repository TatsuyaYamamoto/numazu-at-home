{
  "name": "numazu-at-home",
  "version": "1.4.0",
  "main": "index.functions.js",
  "author": "Tatsuya Yamamoto <yamamoto.tatsuya@fujixerox.co.jp>",
  "license": "MIT",
  "engines": {
    "node": "10"
  },
  "scripts": {
    "dev": "next src",
    "serve": "firebase emulators:start --only functions,hosting",
    "build-client": "run-s build-client:*",
    "build-client:clean": "rm -rf public/*.html public/_next",
    "build-client:build": "next build src",
    "build-client:static-export": "next export src -o public/next && mv public/next/* public && rm -r public/next",
    "build-functions": "run-s build-functions:*",
    "build-functions:clean": "rm -rf dist/functions",
    "build-functions:build": "tsc --project src/tsconfig.functions.json",
    "build-functions:copy-deps": "run-s build-functions:copy-deps:*",
    "build-functions:copy-deps:cpx": "cpx '*{package.json,yarn.lock}' 'dist/functions'",
    "build-functions:copy-deps:yarn": "yarn install --production --cwd dist/functions",
    "build-dev": "cross-env NODE_ENV=development npm-run-all --print-label --parallel build-client build-functions",
    "build-pro": "cross-env NODE_ENV=production  npm-run-all --print-label --parallel build-client build-functions",
    "deploy-dev": "firebase deploy --project numazu-at-home-dev",
    "deploy-pro": "firebase deploy --project numazu-at-home",
    "format": "prettier --write src/**/*.{ts,tsx,json}"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,json,md}": "prettier --write"
  },
  "dependencies": {
    "@material-ui/core": "^4.9.12",
    "@material-ui/icons": "^4.9.1",
    "@reduxjs/toolkit": "^1.3.5",
    "algoliasearch": "^4.2.0",
    "express": "*",
    "firebase": "^7.14.2",
    "firebase-admin": "^8.10.0",
    "firebase-functions": "^3.6.0",
    "jsdom": "^16.2.2",
    "moment": "^2.25.3",
    "morgan": "^1.10.0",
    "next": "^9.3.5",
    "node-fetch": "^2.6.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-ga": "^2.7.0",
    "react-redux": "^7.2.0",
    "react-slick": "^0.25.2",
    "react-virtualized": "^9.21.2",
    "slick-carousel": "^1.8.1",
    "styled-components": "^5.1.0",
    "twit": "^2.2.11"
  },
  "devDependencies": {
    "@svgr/webpack": "^5.4.0",
    "@types/algoliasearch": "^3.34.10",
    "@types/jest": "^25.2.1",
    "@types/jsdom": "^16.2.1",
    "@types/morgan": "^1.9.0",
    "@types/node": "^13.13.2",
    "@types/node-fetch": "^2.5.7",
    "@types/react": "^16.9.34",
    "@types/react-dom": "^16.9.6",
    "@types/react-ga": "^2.3.0",
    "@types/react-redux": "^7.1.7",
    "@types/react-slick": "^0.23.4",
    "@types/react-virtualized": "^9.21.9",
    "@types/styled-components": "^5.1.0",
    "@types/twit": "^2.2.24",
    "babel-plugin-styled-components": "^1.10.7",
    "cpx": "^1.5.0",
    "cross-env": "^7.0.2",
    "firebase-functions-test": "^0.2.0",
    "husky": ">=4",
    "jest": "^25.5.4",
    "lint-staged": ">=10",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "ts-jest": "^25.4.0",
    "tslint": "^5.12.0",
    "typescript": "^3.8.3"
  }
}
